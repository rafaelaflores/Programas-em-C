// Faça um programa que receba o ano de nascimento de uma pessoa e o ano atual, calcule e mostre: a idade desta pessoa; quantos anos ela terá em 2050
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
	int main()
	{
		setlocale(LC_ALL, "Portuguese");
		int nasc;
		int atual;
		int futuro=2050;
		printf("Digite o ano em que você nasceu: ");
		scanf("%d",&nsc)
		printf("\nDigite o ano atual: ");
		scanf("%d",&atual);
		printf("\n Sua idade atual é %d anos!",atual-nasc); 
		printf("\n Em 2050, você terá %d anos!",futuro-nasc);
		return 0; 
	}
