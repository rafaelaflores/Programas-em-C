#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <conio.h>
	
	int main()
	{
		setlocale(LC_ALL, "Portuguese");
		int mes;
	
		printf("Digite o número para ver o mês correspondente, de 1 a 12: ");
		scanf("%d",&mes);
	
		switch(mes)
		{
			case 1:
				printf("\nO mês correspondente é Janeiro!\n");
				break;
			case 2:
				printf("\nO mês correspondente é Fevereiro!\n");
				break;
			case 3:
				printf("\nO mês correspondente é Março!\n");
				break;
			case 4:
				printf("\nO mês correspondente é Abril!\n");
				break;
			case 5:
				printf("\nO mês correspondente é Maio!\n");
				break;
			case 6:
				printf("\nO mês correspondente é Junho!\n");
				break;
			case 7:
				printf("\nO mês correspondente é Julho!\n");
				break;
			case 8:
				printf("\nO mês correspondente é Agosto!\n");
				break;
			case 9:
				printf("\nO mês correspondente é Setembro!\n");
				break;
			case 10:
				printf("\nO mês correspondente é Outubro!\n");
				break;
			case 11:
				printf("\nO mês correspondente é Novembro!\n");
				break;
			case 12:
				printf("\nO mês correspondente é Dezembro!\n");
				break;

				default:
			printf("\nNúmero inválido!\n");
			break;
			}
			printf("\n\n");
				system("pause");
			return 0; 
		}
