#include <stdlib.h>
#include <stdio.h>
#include <locale.h>
#include <math.h>
	float hipo(float oposto, float adj) {
		int x; 
		x = (oposto * oposto) + (adj * adj);
		return sqrt(x);
	}
	main() {
		float adj, oposto;
		setlocale(LC_ALL,"Portuguese");
		printf("Digite o cateto adjacente: ");
		scanf("%f", &adj);
		printf("\nDigite o cateto oposto: ");
		scanf("%f", &oposto);
		printf("\nA hipotenusa Ã© igual a: %.1f", hipo(oposto, adj));
	}
